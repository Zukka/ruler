<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ruler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="myRulerStyleHorizontal">
        <item name="rulerOrientation">Horizontal</item>
        <item name="measureUnit">Inch</item>
        <item name="lineColor">@color/black</item>
        <item name="textColor">@color/purple_700</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="rulerHeight">60</item>
        <item name="markCmWidth">30</item>
        <item name="markHalfCmWidth">20</item>
        <item name="markMmWidth">10</item>
    </style>

    <style name="myRulerStyleVertical">
        <item name="rulerOrientation">Vertical</item>
        <item name="measureUnit">Inch</item>
        <item name="textColor">#F44336</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
</resources>